<!--index.wxml-->
<scroll-view class='content' >
  <view class='user_top'>
      <view class='user_infor'>
         <view class='head_name'>
            <image class='head_image' src='{{userInfo.avatarUrl}}'></image>
         <view class='user_name'>{{userInfo.nickName}}</view>
         </view>
         <button class='loginAcount' open-type="getUserInfo" bindgetuserinfo="getUserInfo">登录账号</button>
      </view>
   </view>
   <view class='urser_bottom'>
      <button id='found_btn' bindtap="found_jumpBtn" size="mini" plain='true' hidden='true'></button>
      <label class='found_count' for='found_btn'>
         <label class='aount_numnber'>-</label>
         <label class='attation'>我捡到的</label>
      </label>
      <button id='lost_btn' bindtap="lost_jumpBtn" size="mini" plain='true' hidden='true'></button>
      <label class='lost_count' for='lost_btn'>
         <label class='aount_numnber'>-</label>
         <label class='attation'>我丢失的</label>
      </label>
   </view>
   
</scroll-view>

