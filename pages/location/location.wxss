/* pages/location/location.wxss */

.container{
    position: relative;
    width: 100%;
    height: 100vh;
}

.map {
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
}

/* 中心标记点 */
.center {
    width:32px;
    height:40px;
    margin: 0 auto;
    position: relative;
    top: calc( 50% - 40px );
}

/* 复位按钮 */
.location {
    width: 120rpx;
    height: 120rpx;
    position: absolute;
    bottom: 210rpx;
    left: 20rpx;
}